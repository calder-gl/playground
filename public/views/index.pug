doctype html
html
  html(lang='en')
    title Calder Playground

    link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Roboto:300,300italic,700,700italic')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.0/normalize.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/milligram/1.3.0/milligram.min.css')
    link(rel='stylesheet', href='styles/main.css')

  body
    .container
      .menu
        h1 Calder Playground
        select#edit

        button#saveAs Save as
        button#deleteFile Delete

      .row
        .column
          #source
          div#toolbar.controls
            button#run Save and Run (Ctrl-R)
            button#export.button-outline Export .obj

          div#rendererControls.controls
            div.input
              label(for=vectorField) Show vector field
              input#vectorField(type='checkbox')
            div.input
              label(for=bones) Show bones
              input#bones(type='checkbox')
            div.input
              label Maximum depth
              input#maxDepth(type='number', value='100', step='1')

          pre
            code#log

        .column.fixed
          div#webgl

          div#camera.controls
            span Snap to side:
            button#x_plus x+
            button#x_minus x-
            button#y_plus y+
            button#y_minus y-
            button#z_plus z+
            button#z_minus z-

          div#cost.disabled.controls
            div.input
              label Distance multiplier
              div.group
                input#distance1(type='number', disabled)
                span +
                input#distance2(type='number', disabled)
                span <i>x</i> +
                input#distance3(type='number', disabled)
                span <i>x</i><sup>2</sup>
            div.input
              label Alignment multiplier
              input#alignmentMultiplier(type='number', disabled)
            div.input
              label Alignment offset
              div.group
                div.endpoint
                  div.num
                    span -1
                    span.description (lenient)
                  span &le;
                input#alignmentOffset(type='number', disabled)
                div.endpoint
                  span &le;
                  div.num
                    span 1
                    span.description (strict)
            div.input
              button#delete(disabled) Delete this guide

    script#code(type='x-code')!= source
    script(src='js/client.js')
